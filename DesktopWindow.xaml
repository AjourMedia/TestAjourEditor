<?xml version="1.0" encoding="utf-8" ?>
<Window 
	xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    x:Class="TestAjourEditor.DesktopWindow"
	>
	<Window.TitleBar>
		<TitleBar HeightRequest="48">
			<TitleBar.Content>
				<SearchBar WidthRequest="160" />
			</TitleBar.Content>
			<TitleBar.LeadingContent>
				<HorizontalStackLayout VerticalOptions="Center">
					<Image Source="app.ico" WidthRequest="32" HeightRequest="32" Margin="12,0,0,0" />
					<Label Text="Cross-platform editor" TextColor="Blue" FontSize="16" Margin="12,6,0,0" />
				</HorizontalStackLayout>
			</TitleBar.LeadingContent>
			<TitleBar.TrailingContent>
				<HorizontalStackLayout VerticalOptions="Center">
					<Label Text="Ajour Media AS" TextColor="Gray" />
				</HorizontalStackLayout>
			</TitleBar.TrailingContent>
		</TitleBar>
	</Window.TitleBar>
</Window>